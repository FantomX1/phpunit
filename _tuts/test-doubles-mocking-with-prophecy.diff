+<?php
+
+namespace Tests\AppBundle\Service;
+
+use AppBundle\Entity\History;
+use AppBundle\Entity\Tracker;
+use AppBundle\Service\TrackerService;
+use Doctrine\ORM\EntityManagerInterface;
+use PHPUnit\Framework\TestCase;
+use Prophecy\Argument;
+
+class TrackerServiceProphecyTest extends TestCase
+{
+    public function testItStoresTheLocationOfAllTrackers()
+    {
+        $entityManager = $this->prophesize(EntityManagerInterface::class);
+
+        $entityManager->persist(Argument::type(History::class))
+            ->shouldBeCalledTimes(2);
+
+        $entityManager->flush()->shouldBeCalled();
+
+        $trackerService = new TrackerService($entityManager->reveal());
+
+        $trackerService->addTracker(new Tracker());
+        $trackerService->addTracker(new Tracker());
+
+        $trackerService->takeSnapshot();
+    }
+}
