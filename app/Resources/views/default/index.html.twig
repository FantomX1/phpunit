{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="header">Welcome to Dinosaur Park</h1>

    <div class="container">
        {% if app.session.started and app.session.flashBag.peekAll is not empty %}
            <div id="flash-messages" class="messages">
                {% for type, messages in app.session.flashBag.all() %}
                    {% for message in messages %}
                        <blockquote>
                            {{ message }}
                        </blockquote>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
